{
    "compilerOptions": {
        "outDir": "dist",
        "target": "esnext",
        "lib": ["esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "exclude": ["node_modules", "test"]
}

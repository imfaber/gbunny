{
    "compilerOptions": {
      "outDir": "dist",
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "declaration": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "stripInternal": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
      }
    },
    "exclude": [
      "node_modules",
      "test"
    ]
  }
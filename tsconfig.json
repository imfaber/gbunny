{
    "compilerOptions": {
      "outDir": "dist",
      "target": "es5",
      "lib": ["es6"],
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "sourceMap": false,
      "baseUrl": "./src",
      "paths": {
        "@utils/*": ["utils/*"],
      }
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }